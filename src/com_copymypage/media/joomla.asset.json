{
  "$schema": "https://developer.joomla.org/schemas/json-schema/web_assets.json",
  "name": "com_copymypage",
  "version": "0.0.5",
  "description": "Asset definitions for CopyMyPage template and related components.",
  "license": "GPL-3.0-or-later",
  "assets": [
    {
      "name": "copymypage.site",
      "type": "preset",
      "dependencies": [
        "template#style",
        "copymypage#script"
      ]
    },
    {
      "name": "template",
      "type": "style",
      "uri": "com_copymypage/template.css",
      "version": "0.0.5",
      "dependencies": [
        "uikit",
        "joomla.fontawesome",
        "mmenu.light",
        "template.fonts"
      ]
    },
    {
      "name": "template.fonts",
      "type": "style",
      "uri": "com_copymypage/fonts-local/fonts-local.min.css"
    },
    {
      "name": "copymypage",
      "type": "script",
      "uri": "com_copymypage/copymypage.js",
      "version": "0.0.5",
      "class": "CopyMyPageAssetItem",
      "dependencies": [
        "core",
        "messages",
        "uikit",
        "uikit.icons",
        "mmenu.light"
      ],
      "attributes": {
        "defer": true
      }      
    },
    {
      "name": "uikit",
      "type": "style",
      "uri": "com_copymypage/uikit/uikit.min.css",
      "version": "3.24.2"
    },
    {
      "name": "uikit",
      "type": "script",
      "uri": "com_copymypage/uikit/uikit.min.js",
      "version": "3.25.6",
      "attributes": {
        "defer": true
      }
    },
    {
      "name": "uikit.icons",
      "type": "script",
      "uri": "com_copymypage/uikit/uikit-icons.min.js",
      "version": "3.25.6",
      "dependencies": [
        "uikit"
      ],
      "attributes": {
        "defer": true
      }
    },
    {
      "name": "joomla.fontawesome",
      "type": "style",
      "uri": "system/joomla-fontawesome.min.css"
    },
    {
      "name": "mmenu.light",
      "type": "style",
      "uri": "com_copymypage/mmenu-light/mmenu-light.min.css",
      "version": "3.2.2"
    },
    {
      "name": "mmenu.light",
      "type": "script",
      "uri": "com_copymypage/mmenu-light/mmenu-light.min.js",
      "version": "3.2.2",
      "dependencies": [
        "mmenu.light.polyfills"
      ],
      "attributes": {
        "defer": true
      }
    },
    {
      "name": "mmenu.light.polyfills",
      "type": "script",
      "uri": "com_copymypage/mmenu-light/mmenu-light.polyfills.min.js",
      "version": "3.2.2",
      "attributes": {
        "defer": true
      }
    }
  ]
}
