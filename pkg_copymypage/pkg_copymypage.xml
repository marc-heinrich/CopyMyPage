  <version>0.0.4</version>
  <!-- Short description via language constant -->
  <description>PKG_COPYMYPAGE_XML_DESCRIPTION</description>
  <!-- Installer script (Service Provider aware) -->
  <scriptfile>script.php</scriptfile>
  <!-- Subpackage files -->
  <files folder="subpackages">
    <file id="com_copymypage" type="component">com_copymypage.zip</file>
    <file id="copymypage" type="template" client="site">tpl_copymypage.zip</file>
