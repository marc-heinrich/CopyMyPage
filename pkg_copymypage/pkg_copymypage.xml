    <file id="mod_copymypage_slideshow" type="module" client="site">mod_copymypage_slideshow.zip</file>
    <file id="mod_copymypage_navbar" type="module" client="site">mod_copymypage_navbar.zip</file>
    <file id="copymypage" type="plugin" group="system">plg_system_copymypage.zip</file>
  </files>
  <!-- Language files for package description and system strings -->
  <languages>
    <language tag="de-DE">language/de-DE/pkg_copymypage.ini</language>
    <language tag="de-DE">language/de-DE/pkg_copymypage.sys.ini</language>
    <language tag="en-GB">language/en-GB/pkg_copymypage.ini</language>
    <language tag="en-GB">language/en-GB/pkg_copymypage.sys.ini</language>
    <language tag="es-ES">language/es-ES/pkg_copymypage.ini</language>
