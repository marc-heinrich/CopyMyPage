    <language tag="it-IT">language/it-IT/pkg_copymypage.ini</language>
    <language tag="it-IT">language/it-IT/pkg_copymypage.sys.ini</language>
  </languages>
  <!-- Changelog reference -->
  <changelogurl>https://update.copymypage.de/changelogs/pkg_copymypage.xml</changelogurl>
  <!-- Update server -->
  <updateservers>
    <server type="extension" priority="1" name="CopyMyPage Update Site">https://update.copymypage.de/update.xml</server>
  </updateservers>
</extension>
